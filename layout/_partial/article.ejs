<article class="article <%= index ? 'article--excerpt' : '' %>">

    <header class="article__header">
        <% if (index){ %>
            <h2 class="article__header__title">
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
            </h2>
        <% } else { %>
            <h1 class="article__header__title"><%= post.title %></h1>
        <% } %>
        <div class="article__header__meta">
            <p>Published: <%- partial('component/date', {datetime: post.date}) %></p>
            <p>Last updated: <%- partial('component/date', {datetime: post.updated}) %></p>
        </div>
    </header>

    <div class="article__content">
        <% if (post.excerpt && index){ %>
            <div class="article__content__body">
                <%- post.excerpt %>
            </div>
            <a href="<%- url_for(post.path) %>">Read '<%= post.title %>'</a>
        <% } else { %>
            <div class="article__content__body">
                <%- post.content %>
            </div>
        <% } %>
    </div>

</article>
